<div class="row">
  <div class="col s12">
    <div class='welcome-user'>
      <div class='user-avatar'>
        <%= image_tag @user.avatar.url(:medium) %>
      </div>
      <% if user == current_user %>
      <br>
        <p>Welcome, <%= current_user.name.capitalize %>!</p>
        <p>
          <% if signed_in? %>
            <%= link_to "Sign Out", sign_out_path, method: :delete %>
          <% end %>
        </p>
        <%= link_to "Edit Profile", edit_user_path %>

      <% else %>
      <p><%= user.name %></p>
      <% end %>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col s8 offset-s2">
    <div class='card'>
      <div class='card-content'>
        <div class='row'>
          <div class='col s12 m6'>
              <p><span style="margin-right: 15px"><i class="material-icons">email</i></span><%= @user.email %></p>
              <p><span style="margin-right: 15px"><i class="material-icons">phone</i></span><%= @user.phone_number %></p>
              <p><span style="margin-right: 15px"><i class="material-icons">cake</i></span><%= @user.birthday %></p>
          </div>
          <div class='col s12 m6'>
            <p class='about-me'>
              <%= @user.about_me %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
