
<h4><%= task.title %></h4>
  <%= task.description %>
  <p><% if task.children %>
  <% task.children.each do |child| %>
  <%= child.title %><%=link_to "edit", edit_task_path(child) %>
  <p><%= child.description %></p>
  <% end %>
  <% end %></p>

  <p>
    <%= link_to "New Task", new_task_path(parent_task_id: params[:id]), class: "btn" %>
    <%= link_to "Edit", edit_task_path(task, list_id: task.list.id), class: "btn" %>
    <%= link_to "Archive", task, class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this task?"} %>
  </p>
