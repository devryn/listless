<div class='list-form'>
<h2><%= form_title %></h2>

<% if list.errors.any? %>
    <% list.errors.full_messages.each do |msg| %>
      <p> <%= msg %></p>
    <% end %>
  <% end %>

    <%= form_for(list) do |f| %>

    <span class="textarea1"></span>
      <label for="title"></label>
      <%= f.text_field :title, placeholder: 'Title Your List', class: 'form-control' %>

      <label for="difficulty">Difficulty Level </label>
      <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="On a scale from 1-5, how hard is this list going to be to complete?">?</a>
      <%= f.range_field(:difficulty, in: 1..5) %>

      <label for="energy">Energy Level </label>
      <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="On a scale from 1-5, how mush energy is this list going to take?">?</a>
      <%= f.range_field(:energy, in: 1..5) %>

      <label for="due_date">Due Date </label>
      <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="If you need to get this list done by a certain date, set a due date for yourself.">?</a>
      <%= f.date_field :due_date, class: 'datepicker' %>

      <label for="reward">Reward </label>
      <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="You have the option to set a reward to motivate yourself.">?</a>
      <%= f.text_field :reward, placeholder: 'Treat yoself', class: 'form-control' %>

      <%= f.check_box :completed, class: 'form-control' %>
      <label for="list_completed">List Completed?</label>

      <div><%= f.check_box(:public, {}, true, false) %>
      <label for="list_public">Make This List Public? </label></div>

      <p><div class ='actions text-center'>
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
