<div class='group-index'>
  <div class='grouped-title'><h4>*Positively Fine* </h4>
  <p>These lists are on the 4/5 level of difficulty and below. How many tasks can you complete? </p>
</div>

  <div class='grouped-lists'>
    <% if lists.where(archived: false).count.zero? %>
      <p>You don't have any lists ranked 4/5 or lower :(</p>
    <% else %>

    <% unless lists.where(difficulty: 4).empty? %>
      <ul class='collection'>
        <p class='list-collection'>⭐️⭐️⭐️⭐️
        <% lists.each do |list| %>
          <% unless list.archived? %>
            <% if list.user == current_user %>
              <% if list.difficulty == 4 %>
              <li class='list-collection'> <%= link_to list.title, list %> </li>
              <% end %>
            <% end %>
          <% end %>
        <% end %></p>
      </ul>
      <% end %>

    <% unless lists.where(difficulty: 3).empty? %>
      <ul class='collection'>
        <p class='list-collection'>⭐️⭐️⭐️
        <% lists.each do |list| %>
          <% unless list.archived? %>
            <% if list.user == current_user %>
              <% if list.difficulty == 3 %>
              <li class='list-collection'> <%= link_to list.title, list %> </li>
              <% end %>
            <% end %>
          <% end %>
        <% end %></p>
      </ul>
      <% end %>

    <% unless lists.where(difficulty: 2).empty? %>
      <ul class='collection'>
        <p class='list-collection'>⭐️⭐️
        <% lists.each do |list| %>
          <% unless list.archived? %>
            <% if list.user == current_user %>
              <% if list.difficulty == 2 %>
              <li class='list-collection'> <%= link_to list.title, list %> </li>
              <% end %>
            <% end %>
          <% end %>
        <% end %></p>
      </ul>
      <% end %>

      <% unless lists.where(difficulty: 1).empty? %>
        <ul class='collection'>
          <p class='list-collection'>⭐️
          <% lists.each do |list| %>
            <% unless list.archived? %>
              <% if list.user == current_user %>
                <% if list.difficulty == 1 %>
                <li class='list-collection'> <%= link_to list.title, list %> </li>
                <% end %>
              <% end %>
            <% end %>
          <% end %></p>
        </ul>
        <% end %>
      <% end %>

      <div class='grouped-btn'>
      <%= link_to "All Lists", lists_path, class: "btn" %>
      </div>
    </div>
  </div>
